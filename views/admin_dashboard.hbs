<body>
    <div class="container mb-5">
        <div class="row mt-5">
            <h4 class="mx-auto mb-5">All Projects</h4>
            <div class="col-md-12">
                <table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Target</th>
      <th scope="col">Img</th>
      <th scope="col">Delete</th>
      <th scope="col">Edit</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each data}}
    <tr>
      <th >{{this.discription}}</th>
      <td>{{this.price}}</td>
      <td>{{this.target}}</td>
      <td><img src="/images/{{this.img}}" alt="" style="width: 3rem;height: 3rem;"></td>
      <td><form action="/admin/edit_project" method="post">
      <input type="hidden" name="id" value="{{this._id}}">
      <button type="submit" class="btn btn-warning">Edit</button>
      </form></td>
      <td><form action="/admin/delete_project" method="post">
       <input type="hidden" name="_id" value="{{this._id}}">
       <button type="submit" onclick="return confirm('Are you sure to delete?')" class="btn btn-danger">Delete</button>
      </form></td>
       
       

    </tr>
   {{/each}}
  </tbody>
</table>
